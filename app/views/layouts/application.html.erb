<!DOCTYPE html>
<html>

<head>
  <title>App</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
  <div class="main">
    <div class="container">
      <header>
        <a href="/"><img src="/assets/home_logo.png" class="logo"></a>
        <nav>
          <% if user_signed_in? %>
          <ul>
            <div class="btn btn-success whitecor-link">
              <li><%= link_to 'プロフィール変更', edit_user_registration_path %></li>
            </div>
            <div class="btn btn-secondary whitecor-link">
              <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete %></li>
            </div>
          </ul>
          <% else %>
          <ul>
            <div class="btn btn-outline-primary bluecor-link">
              <li><%= link_to 'サインアップ', new_user_registration_path %></li>
            </div>
            <div class="btn btn-primary whitecor-link">
              <li><%= link_to 'ログイン', new_user_session_path %></li>
            </div>
          </ul>


          <% end %>
        </nav>
        <div class="navi">
          　　<ul>
            　　　　<li><a href="/">ホーム</a></li>
            　　　　<li><a href="/intro">南風について</a></li>
            　　　　<li><a href="/members">メンバー</a></li>
            　　　　<li><a href="#">活動内容</a></li>
            　　　　<li><a href="#">お問い合わせ</a></li>
          </ul>
        </div>
      </header>
      <%= yield %>
    </div>
    <footer>
      <p>(c)copy right</p>
    </footer>
  </div>
</body>

