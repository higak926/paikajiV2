<div class="row">
  <div class="user-default">
    <h2>編集</h2>
    <h3 style="text-align: center">Hello <%= @user.username %> ！</h3>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%
=begin%>
      <%= render "users/shared/error_messages", resource: resource %>
      <%
=end%>
      <%= devise_error_messages %>
      <div class="field">
        <%= f.label :username, "ユーザー名" %><br />
        <%= f.text_field :username, autofocus: true, autocomplete: "username" %>
      </div>
      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>
      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>
      <div class="field">
        <%= f.label :password %> <i>(変更しない場合は空にしてください)</i><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
        <% if @minimum_password_length %>
          <br />
          <em><%= @minimum_password_length %> characters minimum</em>
        <% end %>
      </div>
      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>
      <div class="field">
        <%= f.label :current_password %> <i>(変更する場合は現在のパスワードが必要です)</i><br />
        <%= f.password_field :current_password, autocomplete: "current-password" %>
      </div>
      <div class="field">
        <%= f.label :introduction, "自己紹介" %><br />
        <%= f.text_area :introduction, autocomplete: "introduction" %>
      </div>
      <div class="actions pi-center">
        <%= f.submit "更新する", class: "btn btn-primary whitecor-link" %>
      </div>
    <% end %>
    <h3>アカウント削除</h3>
    <p>アカウント削除はこちら <%= button_to "アカウント削除", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>
    <%= link_to "Back", :back %>
  </div>
</div>
