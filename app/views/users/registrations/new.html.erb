<div class="row">
  <div class="user-create">
    <h1>ユーザー登録</h1>

    <div class="form-block">
      <h3>ユーザー登録がお済みでない方</h3>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages %>

      <div class="row">
        <div class="col-md-6 field__margin">
          <p>ユーザー名</p>
        </div>
        <div class="col-md-6 field__margin">
          <p><%= f.text_field :username, autofocus: true, autocomplete: "username", placeholder: "ユーザー名を入力" %></p>
        </div>
      </div>

      <div class="row">
        <div class="col-md-6 field__margin">
          <div class="">
            <p>メールアドレス</p>
          </div>
        </div>
        <div class="col-md-6 field__margin">
          <div class="">
            <p><%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレスを入力" %></p>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-md-6 field__margin">
          <div class="">
            <p>ご希望のパスワード</p>
          </div>
        </div>
        <div class="col-md-6 field__margin">
          <div class="">
            <p><%= f.password_field :password, autocomplete: "new-password", placeholder: "6〜32文字の半角英数字が使用可" %></p>
            <p><%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "もう一度入力してください" %></p>
          </div>
        </div>
      </div>

      <div class="actions pi-center">
        <%= f.submit "登録する", class: 'btn btn-primary whitecor-link' %>
      </div>
    </div>
    <% end %>

    <div class="form-block">
      <h3>ユーザー登録がお済みの方</h3>
      <div style="text-align: center;">
        <div class="btn btn-primary whitecor-link">
          <%= link_to "ログイン", new_session_path(resource_name) %>
        </div>
      </div>
    </div>
  </div>
</div>